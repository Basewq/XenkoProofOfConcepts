<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xenko.Engine" Version="3.1.0.1" />

    <PackageReference Include="Xenko.Video" Version="3.1.0.1" />
    <PackageReference Include="Xenko.Physics" Version="3.1.0.1" />
    <PackageReference Include="Xenko.Navigation" Version="3.1.0.1" />
    <PackageReference Include="Xenko.Particles" Version="3.1.0.1" />
    <PackageReference Include="Xenko.UI" Version="3.1.0.1" />

    <PackageReference Include="Xenko.Core.Assets.CompilerApp" Version="3.1.0.1" IncludeAssets="build;buildTransitive" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Effects\DecalShader.cs">
      <DesignTime>True</DesignTime>
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>DecalShader.xksl</DependentUpon>
    </Compile>
    <Compile Update="Effects\ObjectInfoInputShader.cs">
      <DesignTime>True</DesignTime>
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>ObjectInfoInputShader.xksl</DependentUpon>
    </Compile>
    <Compile Update="Effects\ObjectInfoOutputEffect.cs">
      <DesignTime>True</DesignTime>
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>ObjectInfoOutputEffect.xkfx</DependentUpon>
    </Compile>
    <Compile Update="Effects\ObjectInfoOutputShader.cs">
      <DesignTime>True</DesignTime>
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>ObjectInfoOutputShader.xksl</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Effects\DecalShader.xksl">
      <Generator>XenkoShaderKeyGenerator</Generator>
      <LastGenOutput>DecalShader.cs</LastGenOutput>
    </None>
    <None Update="Effects\ObjectInfoInputShader.xksl">
      <Generator>XenkoShaderKeyGenerator</Generator>
      <LastGenOutput>ObjectInfoInputShader.cs</LastGenOutput>
    </None>
    <None Update="Effects\ObjectInfoOutputEffect.xkfx">
      <Generator>XenkoShaderKeyGenerator</Generator>
      <LastGenOutput>ObjectInfoOutputEffect.cs</LastGenOutput>
    </None>
    <None Update="Effects\ObjectInfoOutputShader.xksl">
      <Generator>XenkoShaderKeyGenerator</Generator>
      <LastGenOutput>ObjectInfoOutputShader.cs</LastGenOutput>
    </None>
  </ItemGroup>
</Project>
